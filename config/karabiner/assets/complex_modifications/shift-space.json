{
  "title": "独自ルール",
  "rules": [
    {
      "description": "左shiftは英数、右shift-spaceはかな (rev 4)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 50
          },
          "to": [
            {
              "key_code": "left_shift",
              "lazy": true
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_eisuu"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
              "key_code": "spacebar",
              "modifiers": { "mandatory": "right_shift"}
          },
          "to": [
            { "key_code": "japanese_kana" }
          ]
        }
      ]
    }
  ]
}
